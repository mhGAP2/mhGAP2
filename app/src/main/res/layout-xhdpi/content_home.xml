<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tencho.mhgap2.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="3sp"
                android:text="@string/mcare"
                android:textAlignment="center"
                android:textColor="#0c3669"
                android:textSize="@dimen/Home_header"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:contentDescription="logo"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/logo"
                tools:ignore="HardcodedText,InefficientWeight"
                tools:layout_editor_absoluteY="48dp" />

            <Button
                android:id="@+id/depression"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/d1"
                android:fontFamily="sans-serif-condensed"
                android:text="depression"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/psy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/d2"
                android:fontFamily="sans-serif-condensed"
                android:text="Psychoses"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/depression"
                tools:ignore="HardcodedText" />


            <Button
                android:id="@+id/Epilipsy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/d3"
                android:fontFamily="sans-serif-condensed"
                android:text="Epilepsy"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/psy"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Disorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/d4"
                android:fontFamily="sans-serif-condensed"
                android:text="CMH Behavioural Disorder"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Epilipsy"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Dementia"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:background="@drawable/d5"
                android:fontFamily="sans-serif-condensed"
                android:text="Dementia"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Disorder"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Substance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/d6"
                android:fontFamily="sans-serif-condensed"
                android:text="Substance use"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Dementia"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/SUICIDE"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s_height"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/d7"
                android:fontFamily="sans-serif-condensed"
                android:text="SELF-HARM/SUICIDE"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Substance"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/OTH"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:background="@drawable/d8"
                android:fontFamily="sans-serif-condensed"
                android:text="other significant health COMPLAINTS "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/s_fontsize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SUICIDE"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
