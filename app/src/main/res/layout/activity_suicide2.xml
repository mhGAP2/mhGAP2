<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tencho.mhgap2.Depression1"
    android:background="#E65521">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">


        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Management"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            tools:ignore="HardcodedText,SpUsage" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="107dp"
            android:layout_height="124dp"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/management" />

        <Button
            android:id="@+id/button1"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/depre"
            android:text="Protocol 1"
            android:textColor="#E65521"
            android:textSize="18dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <Button
            android:id="@+id/button2"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/depre"
            android:text="protocol 2"
            android:textColor="#E65521"
            android:textSize="18dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        <Button
            android:id="@+id/button3"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/depre"
            android:text="PROTOCOL 3"
            android:textColor="#E65521"
            android:textSize="18dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>


