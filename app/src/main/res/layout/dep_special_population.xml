<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#cc0808"
            android:textSize="25dp"
            android:text="Special populations"/>


        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textStyle="italic"
            android:text="Note that interventions may differ for these populations"/>


        <TextView
            android:id="@+id/textView19"
            android:textColor="#cc0808"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"

            android:text="CHILD / ADOLESCENT"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#361818"
            android:layout_marginTop="5dp"
            android:text="For management of depression in children/adolescents, go to CMH."/>


        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:textColor="#cc0808"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"

            android:text="WOMEN WHO ARE PREGNANT OR BREASTFEEDING"/>

        <TextView
            android:id="@+id/textView22"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/population"/>

    </LinearLayout>
</ScrollView>