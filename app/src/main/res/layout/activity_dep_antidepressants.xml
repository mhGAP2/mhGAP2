<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent" android:layout_height="match_parent"
android:background="#dfd5d5"
    tools:context="com.example.tencho.mhgap2.dep_antidepressants"
    >

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table_1_antidepressants"
            android:textAlignment="center"
            android:textColor="#881D6C"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="#881D6C">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="3"
                android:layout_weight="1"
                android:text="MEDICATION"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="6"
                android:text="        DOSING"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="5"
                android:fontFamily="sans-serif-condensed"
                android:text="SIDE EFFECTS"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_weight="1"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="6"
                android:text="CONTRAINDICATIONS / CAUTIONS"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                tools:ignore="HardcodedText,SpUsage" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:background="@drawable/border2">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:ems="6"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                android:text="AMITRIPTYLINE(a tricyclic antidepressant(TCA))"
                android:textColor="#881D6C"
                android:textSize="10dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/dosing1"
                android:textColor="#361818"
                android:textSize="10dp"
                android:layout_weight="1"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/side1"
                android:textColor="#361818"
                android:textSize="10dp"
                android:layout_weight="1"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                android:text="@string/cautions1"
                android:textColor="#361818"
                android:textSize="10dp"
                tools:ignore="RtlHardcoded,SpUsage" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:background="@drawable/border2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:ems="6"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                android:text="FLUOXETINE(a selective serotonin reuptake inhibitor (SSRI))"
                android:textColor="#881D6C"
                android:textSize="10dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/dosing2"
                android:textColor="#361818"
                android:textSize="10dp"
                android:layout_weight="1"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/side2"
                android:textColor="#361818"
                android:textSize="10dp"
                android:layout_weight="1"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                android:text="@string/cautions2"
                android:textColor="#361818"
                android:textSize="10dp"
                tools:ignore="RtlHardcoded,SpUsage" />


        </TableRow>
    </TableLayout>

</ScrollView>
