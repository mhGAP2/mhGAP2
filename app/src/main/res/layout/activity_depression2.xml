<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tencho.mhgap2.depression2"
    android:background="#881D6C"
    android:baselineAligned="false"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEPRESSION"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="141dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="62dp"
                    android:layout_height="80dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/asses" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="62dp"
                    android:layout_height="78dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/manage" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="62dp"
                    android:layout_height="65dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/follow" />


            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/button3"
                    android:layout_width="142dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/depre"
                    android:text="Assessment"
                    android:textColor="#881D6C"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="142dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/depre"
                    android:text="Management"
                    android:textColor="#881D6C"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="142dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/depre"
                    android:text="Follow-up"
                    android:textColor="#881D6C"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
