<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#881D6C"
    tools:context="com.example.tencho.mhgap2.Dep_followup">
    <TextView
        android:id="@+id/title"
        android:text="Follow-Up"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="124dp"
        android:layout_height="86dp"
        android:layout_marginLeft="120dp"
        app:srcCompat="@drawable/followup" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.66">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="0dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent"
                android:layout_weight="142.16"
                android:text="@string/depfollow1"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#881D6C"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Yes"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/depre"
                    android:textSize="15sp"
                    android:textColor="#881D6C"
                    android:layout_weight="1"
                    tools:ignore="ButtonStyle,HardcodedText,SmallSp" />

                <Button
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#881D6C"
                    android:background="@drawable/depre"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    tools:ignore="ButtonStyle,HardcodedText,SmallSp" />
                <Button
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Home"
                    android:textColor="#881D6C"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/depre"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    tools:ignore="ButtonStyle,HardcodedText,SmallSp"/>

            </LinearLayout>
</LinearLayout>
