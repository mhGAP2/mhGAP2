<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#223C97"
tools:context="com.example.tencho.mhgap2.psy_assesment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/title"
        android:text="Assessment"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="124dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/assesment" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="@string/phy1"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#223C97"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Yes"
            android:background="@drawable/depre"
            android:textColor="#223C97"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText,SmallSp"

            />

        <Button
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="No"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/depre"
            android:textColor="#223C97"
            android:textSize="15sp"
            tools:ignore="ButtonStyle,HardcodedText,SmallSp" />
        <Button
            android:id="@+id/oth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/depre"
            android:textColor="#223C97"
            android:text="oth"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText,SmallSp"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
