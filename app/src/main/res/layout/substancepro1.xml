<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        tools:ignore="RtlHardcoded">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protocol 1(Substance use)"
            android:textColor="#F68B1F"
            android:textSize="30sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/textView2"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/harmful_use"
            android:textSize="15sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView2"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Provide psychoeducation and emphasize that the level/pattern of substance use is causing harm to health."
            android:textSize="15sp"
            android:textAlignment="center"
            tools:ignore="DuplicateIds,HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F68B1F"
            android:layout_marginTop="10dp"
            android:text="@string/substancepro3"
            android:textSize="15sp"
            />




        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#361818"
            android:layout_marginTop="10dp"
            android:text="@string/substancepro5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F68B1F"
            android:layout_marginTop="20dp"
            android:text=" Advise stopping the substance completely or consuming it at a non-harmful level, if one exists.  Verbalise your intention to support the person to do this. Ask them if they are ready to make this change."
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView6"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substancepro2"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#361818"
            android:layout_marginTop="20dp"
            android:text="@string/subs9"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substancepro4"
            />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F68B1F"
            android:layout_marginTop="10dp"
            android:text= "@string/substancepro1"

            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#F68B1F"
            android:text="@string/follow_up"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F68B1F"
            android:layout_marginTop="10dp"
            android:text="@string/if_the_person_is_an_adolescent_or_a_woman_of_child_bearing_age_pregnant_or_breastfeeding_see_special_populations" />

    </LinearLayout>
</ScrollView>

