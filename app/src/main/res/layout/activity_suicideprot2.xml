<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tencho.mhgap2.Suicideprot2">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="#ffffff"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            tools:ignore="RtlHardcoded">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protocol 2 Imminent Risk of Self-Harm/Suicide"
                android:textColor="#E65521"
                android:textSize="25sp"
                android:textAlignment="center"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Remove means of self-harm/suicide"
                android:textColor="#E65521"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:text="@string/sui_proto2"
                android:textColor="#E65521"

                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E65521"
                android:layout_marginTop="10dp"
                android:text="DO NOT leave the person alone."
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:text="Supervise and assign a named staff or family member to ensure personâ€™s safety at all times."
                android:textColor="#E65521"

                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="Attend to mental state and emotional distress."
                android:textColor="#E65521"

                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="Provide psychoeducation to the person and their carers."
                android:textColor="#E65521"

                />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:text="@string/sui_2_5_proto2"
                android:textColor="#361818"

                />



            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E65521"
                android:layout_marginTop="10dp"
                android:text="@string/sui_2_3"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E65521"
                android:layout_marginTop="10dp"
                android:text=" Offer carers support. "
                />

            <TextView
                android:id="@+id/textViewc1"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginTop="10dp"
                android:text="@string/sui_2_4_proto2"
                android:textColor="#361818"

                />

            <TextView
                android:id="@+id/textViewT3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E65521"
                android:layout_marginTop="10dp"
                android:text="Consult a mental health specialist, if available."
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/textViewT4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E65521"
                android:layout_marginTop="10dp"
                android:text="Maintain regular contact and Follow-Up."
                android:textSize="15sp"
                />

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>
