<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        tools:ignore="RtlHardcoded">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Population(Substance use)"
            android:textColor="#F68B1F"
            android:textSize="30sp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/textView2"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/adolescents"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView7"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substance22"
            android:textSize="15sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView5"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substance20"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView9"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/psychoeducation_for_the_adolescent"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/t1"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="@string/substance24"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/textView10"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/women_who_are_of_child_bearing_age_pregnant_or_breastfeeding"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView11"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/alcohol_use"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView12"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substance21"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView13"
            android:textColor="#e60923"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView14"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/all_mothers_with_harmful_substance_use_and_young_children_should_be_offered_any_social_support_services_that_are_available_including_additional_postnatal_visits_parenting_training_and_child_care_during_medical_visits"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView16"
            android:textColor="#F68B1F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/drug_use"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView15"
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/substance23"
            android:textSize="15sp"
            android:textAlignment="center"
            />
    </LinearLayout>
</ScrollView>

