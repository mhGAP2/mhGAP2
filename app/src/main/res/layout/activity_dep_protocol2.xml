<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    tools:context="com.example.tencho.mhgap2.dep_protocol2"
android:layout_height="match_parent"
android:background="#ffffff">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    tools:ignore="RtlHardcoded">
        <TextView
            android:id="@+id/textVie1"
            android:textColor="#881D6C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protocol 2(Depression in Bipolar Disorder)"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:textColor="#361818"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PHARMACOLOGICAL INTERVENTIONS"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textVie3"
        android:textColor="#361818"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/dep_protocol"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caution"
        android:textColor="#cc0808"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#361818"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="@string/caution1"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#cc0808"
        android:fontFamily="sans-serif-condensed"
        android:text="Antidepressants in special populations"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#881D6C"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="@string/dep1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:textColor="#361818"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="@string/caution2"

        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#881D6C"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="WOMEN WHO ARE PREGNANT OR BREASTFEEDING"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#361818"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="@string/caution3"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textColor="#881D6C"
        android:text="OLDER ADULTS"
        tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:text="@string/caution4"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#881D6C"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="PEOPLE WITH CARDIOVASCULAR DISEASE"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:textColor="#361818"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="Do NOT prescribe amitriptyline."
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#881D6C"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:text="ADULTS WITH THOUGHTS OR PLANS OF SUICIDE"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/caution5"
        android:textColor="#361818"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp" />
        <TextView
            android:id="@+id/tex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution8"
            android:textColor="#361818"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution9"
            android:textColor="#361818"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>








