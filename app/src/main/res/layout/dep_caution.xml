<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caution"
            android:textColor="#cc0808"
            android:textSize="25dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#361818"
            android:layout_marginTop="10dp"
            android:text="@string/caution1"
            />
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#cc0808"
            android:text="Antidepressants in special populations"
            android:textAlignment="center"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#881D6C"
            android:text="ADOLESCENTS 12 YEARS OF AGE OR OLDER"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution2"

            />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#881D6C"
            android:text="WOMEN WHO ARE PREGNANT OR BREASTFEEDING"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#361818"
            android:layout_marginTop="10dp"
            android:text="@string/caution3"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#881D6C"
            android:text="OLDER ADULTS"
            android:textSize="15dp"/>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution4"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#881D6C"
            android:layout_marginTop="10dp"
            android:text="PEOPLE WITH CARDIOVASCULAR DISEASE"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:textColor="#361818"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Do NOT prescribe amitriptyline."
            />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#881D6C"
            android:layout_marginTop="10dp"
            android:text="ADULTS WITH THOUGHTS OR PLANS OF SUICIDE"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/caution5"
            android:textColor="#361818"

            />
    </LinearLayout>
</ScrollView>







