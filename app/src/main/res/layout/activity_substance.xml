<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tencho.mhgap2.psychoses"
    android:orientation="vertical"
    android:background="#F68B1F">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBSTANCE USE"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/textView4"
        tools:ignore="HardcodedText"
         />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1">

    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:text="@string/cmh"
         />

    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:text="BEGIN TEST"
        android:background="@drawable/depre"
        android:textColor="#F68B1F"
        android:textSize="20sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="30dp"
        tools:ignore="HardcodedText"/>

</LinearLayout>
