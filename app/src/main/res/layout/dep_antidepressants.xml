<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLE 1: Antidepressants"
        android:textAlignment="center"
        android:textColor="#881D6C"
        android:textSize="20sp"/>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#881D6C"
        android:layout_marginTop="5dp"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="3"
            android:id="@+id/textView1"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:text="MEDICATION"
            tools:ignore="HardcodedText,SpUsage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="6"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:id="@+id/textView2"
            android:text="        DOSING"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="6"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:textSize="12dp"
            android:text="SIDE EFFECTS"
            tools:ignore="HardcodedText,SpUsage" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:ems="8"
            android:textSize="12dp"
            android:id="@+id/textView4"
            android:text="CONTRAINDICATIONS / CAUTIONS"
            tools:ignore="HardcodedText,SpUsage" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border2"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="6"
            android:textColor="#881D6C"
            android:text="AMITRIPTYLINE(a tricyclic antidepressant(TCA))"
            android:textSize="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="4"
            android:textColor="#361818"
            android:text="@string/dosing1"
            android:textSize="10dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="4"
            android:textColor="#361818"
            android:text="@string/side1"
            android:textSize="10dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="11"
            android:textColor="#361818"
            android:text="@string/cautions1"
            android:textSize="10dp"
            tools:ignore="SpUsage" />


    </TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/border2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="6"
            android:textColor="#881D6C"
            android:textSize="10dp"
            android:id="@+id/textView9"
            android:text="FLUOXETINE(a selective serotonin reuptake inhibitor (SSRI))"
            tools:ignore="HardcodedText,SpUsage" />
        <TextView
            android:textColor="#361818"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="4"
            android:id="@+id/textView10"
            android:text="@string/dosing2"
            android:textSize="10dp"
            tools:ignore="SpUsage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#361818"
            android:ems="4"
            android:id="@+id/textView11"
            android:textSize="10dp"
            android:text="@string/side2"
            tools:ignore="SpUsage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#361818"
            android:ems="11"
            android:textSize="10dp"
            android:id="@+id/textView12"
            android:text="@string/cautions2"
            tools:ignore="SpUsage" />


    </TableRow>

</TableLayout>