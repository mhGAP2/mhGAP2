<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tencho.mhgap2.HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="510dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:paddingBottom="3sp"
            android:layout_weight="1"
            android:text="Test your health"
            android:textAlignment="center"
            android:textColor="#2c8689"
            android:layout_marginBottom="5dp"
            android:textSize="30dp"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@drawable/logo"
            android:contentDescription="logo"
            tools:ignore="HardcodedText,InefficientWeight" />


        <Button
            android:id="@+id/depression"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/d1"
            android:text="depression"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Psychoses"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/d2"
            android:text="Psychoses"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/Epilipsy"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/d3"
            android:text="Epilipsy"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Disorder"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/d4"
            android:text="CMH Behavioural Disorder"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Dementia"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/d5"
            android:text="Dementia"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Substance"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/d6"
            android:text="Substance use"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/SUICIDE"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/d7"
            android:text="SELF-HARM/SUICIDE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/OTH"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/d7"
            android:text="OTH"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
