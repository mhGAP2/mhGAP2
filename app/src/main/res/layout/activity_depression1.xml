<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tencho.mhgap2.Depression1"
    android:background="#881D6C">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEPRESSION"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:ignore="HardcodedText"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1">


    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:text="@string/dep"
        />

    </ScrollView>

    <Button
        android:id="@+id/depbutton"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/depre"
        android:text="@string/begin_test"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textColor="#881D6C"
        android:textSize="20sp"
        />


</LinearLayout>
