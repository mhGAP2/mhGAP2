<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tencho.mhgap2.depression2"
    android:background="#18B04B">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="61dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/assesment"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="61dp"
        android:layout_height="58dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/management"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="58dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/followup"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        tools:ignore="RtlHardcoded"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView12"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_weight="0.52"
            android:text="HEALTH SECTION"
            android:textColor="#ffffff"
            android:textSize="30dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />

        <Button
            android:id="@+id/b1"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/depre"
            android:text="Assessment"
            android:textColor="#18B04B"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/b2"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/depre"
            android:text="Management"
            android:textColor="#18B04B"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/b3"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:background="@drawable/depre"
            android:text="Follow-up"
            android:textColor="#18B04B"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>

